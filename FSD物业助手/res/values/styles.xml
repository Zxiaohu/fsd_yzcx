<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="style_tabrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="style_tabcol_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">0.382</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="style_tabcol_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">0.618</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_spinner" parent="style_tabcol_right">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <!-- 基本的输入控件的样式 -->
    <style name="style_input_base">
        <item name="android:layout_height">@dimen/dimen_720height</item>
        <item name="android:layout_margin">@dimen/dimen_720minspacing</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_userinfo" parent="style_input_base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_720minspacing</item>
        <item name="android:layout_weight">0.382</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/blue1</item>
    </style>

    <style name="style_btn_base" parent="style_input_base">
        <item name="android:background">@drawable/seletor_login_btn</item>
    </style>

    <style name="style_et_base" parent="style_input_base"></style>

    <style name="styleTtv_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>
</resources>