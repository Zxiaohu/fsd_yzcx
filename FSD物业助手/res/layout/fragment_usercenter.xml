<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zxh="http://schemas.android.com/apk/res/com.fsd.yzcx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical" >

    <TextView
        style="@style/styleTtv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:text="@string/usercenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720maxheight"
        android:layout_marginTop="@dimen/dimen_720maxspacing"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_720maxspacing"
            android:src="@drawable/user_96px" />

        <TextView
            android:id="@+id/tv_fools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user"
            android:layout_alignLeft="@+id/tv_username"
            android:text=""
            android:textSize="@dimen/medium" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_user"
            android:layout_marginLeft="@dimen/dimen_720largespacing"
            android:layout_toRightOf="@+id/iv_user"
            android:text="请点击登录"
            android:textColor="@color/huise"
            android:textSize="@dimen/medium" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_fuwu"
            style="@style/style_frg_user_item"
            android:text="@string/service_details" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_line"
            android:gravity="center"
            android:text="@string/my_points"
            android:textSize="@dimen/medium" />
    </LinearLayout>

    <com.fsd.yzcx.view.UCListItem
        android:id="@+id/ucli_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zxh:text="我的评价" >
    </com.fsd.yzcx.view.UCListItem>

    <com.fsd.yzcx.view.UCListItem
        android:id="@+id/ucli_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zxh:text="客服中心" >
    </com.fsd.yzcx.view.UCListItem>

    <Button 
        android:id="@+id/btn_exit"
        style="@style/style_btn_base"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:text="注销登录"
        android:textSize="@dimen/medium"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dimen_720maxspacing"
         />

</LinearLayout>