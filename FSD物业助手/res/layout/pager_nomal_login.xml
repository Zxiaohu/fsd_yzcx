<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue2"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.382"
        android:text="物业小助手"
        android:id="@+id/tv_login_title"
        android:textColor="@color/white"
        android:textSize="@dimen/large"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.618"
        android:padding="@dimen/login_padding"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            style="@style/style_input_base"
            android:inputType="textPersonName"
            android:hint="输入业主编号:"
            android:textSize="@dimen/small"
            android:textColorHint="@color/white"
            android:ems="10"
            android:id="@+id/et_yzid" />

        <EditText
            android:layout_width="match_parent"
            style="@style/style_input_base"
            android:inputType="textPassword"
            android:ems="10"
            android:textSize="@dimen/small"
            android:hint="登录密码:"
            android:textColorHint="@color/white"
            android:id="@+id/et_pwd" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                style="@style/style_input_base"
                android:layout_weight="1"
                android:id="@+id/tv_findpwd"
                android:gravity="left|center"
                android:textSize="@dimen/small"
                android:text="忘记密码？" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/style_input_base"
                android:id="@+id/tv_chooseroomid"
                android:gravity="right|center"
                android:textSize="@dimen/small"
                android:text="房号登入" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            style="@style/style_btn_base"
            android:text="登录"
            android:id="@+id/btn_login"
            android:textSize="@dimen/medium" />
    </LinearLayout>

</LinearLayout>