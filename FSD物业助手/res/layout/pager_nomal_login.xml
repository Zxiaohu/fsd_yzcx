<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.382"
        android:gravity="center"
        android:text="物业小助手"
        android:textColor="@color/white"
        android:textSize="@dimen/large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.618"
        android:orientation="vertical"
        android:padding="@dimen/login_padding" >

        <EditText
            android:id="@+id/et_yzid"
            style="@style/style_input_base"
            android:layout_width="match_parent"
            
            android:layout_height="@dimen/dimen_720height"
            android:ems="10"
            android:hint="输入业主编号:"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            android:textSize="@dimen/small" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/style_input_base"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_720height"
            android:ems="10"
            android:hint="登录密码:"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="@dimen/small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_findpwd"
                style="@style/style_input_base"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_720height"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="忘记密码？"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/tv_chooseroomid"
                style="@style/style_input_base"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_720height"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="房号登入"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/style_btn_base"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_720height"
            android:text="登录"
            android:textSize="@dimen/medium" />
    </LinearLayout>

</LinearLayout>