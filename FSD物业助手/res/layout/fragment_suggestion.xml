<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zxh="http://schemas.android.com/apk/res/com.fsd.yzcx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        style="@style/styleTtv_title"
        android:layout_width="match_parent"
        android:text="投诉建议" />

    <TextView
        style="@style/style_fuwu_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720sheight"
        android:background="@color/blue4"
        android:text="请选择服务项" />

    <include
        android:id="@+id/sp_fuwu_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_720height"
        android:layout_marginBottom="@dimen/dimen_720maxspacing"
        layout="@layout/sp" />

    <EditText
        android:id="@+id/et_fuwu_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720maxheight"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="请输入您要投诉的内容" />

    <TextView
        style="@style/style_fuwu_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720sheight"
        android:background="@color/blue4"
        android:text="请确认地址" />

    <include
        android:id="@+id/sp_room_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_720height"
        android:layout_marginBottom="@dimen/dimen_720maxspacing"
        layout="@layout/sp" />

    <com.fsd.yzcx.ui.view.UCListItem
        android:id="@+id/ucli_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zxh:text="请选择图片" >
    </com.fsd.yzcx.ui.view.UCListItem>

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="96dp"
        android:layout_height="96dp" />

    <Button
        android:id="@+id/button"
        style="@style/style_btn_fuwu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:layout_gravity="center_horizontal"
        android:text="确认" />

</LinearLayout>