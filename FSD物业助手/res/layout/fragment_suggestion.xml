<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/styleTtv_title"
        android:layout_width="match_parent"
        android:text="投诉建议" />

    <TextView
        android:id="@+id/tv_fuwu_item1"
        style="@style/style_fuwu_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:text="请选择建议项" />

    <Spinner
        android:id="@+id/sp_fuwu_item"
        style="@style/style_fuwu_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height" />

    <TextView
        android:id="@+id/tv_fuwu_item"
        style="@style/style_fuwu_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:text="请输入内容" />

    <EditText
        android:id="@+id/et_fuwu_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720maxheight"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dimen_720minspacing"
        android:textColor="@color/white"
        android:background="@drawable/seletor_info_btn"
        android:text="确认" />

</LinearLayout>